@model IEnumerable<Core.Request.SanPhamResponse>

    @{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    }

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-primary">Danh Sách Sản Phẩm</h3>
        <a asp-action="Create" class="btn btn-success">
            Thêm mới
        </a>
    </div>
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="sanPhamTable" class="table table-striped table-bordered">
                        <thead class="text-center">
                            <tr>
                                <th>STT</th>
                                <th>Tên Sản phẩm</th>
                                <th>Mã Sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Giá bán</th>
                                <th>Trạng thái</th>
                                <th>Nhà cung cấp</th>
                                <th>Danh mục</th>
                                <th>Hình ảnh</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                            int stt = 1;
                            }
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@stt</td>
                                <td>@Html.DisplayFor(modelItem => item.Ten)</td>
                                <td>@Html.DisplayFor(modelItem => item.MaSanPham)</td>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.SoLuong)</td>
                                <td class="text-center">@item.GiaBan.ToString("N0") VND</td>
                                <td class="text-center">
                                    @if (item.TrangThai)
                                    {
                                    <span class="text-success"><strong>Hoạt động</strong></span>
                                    }
                                    else
                                    {
                                    <span class="text-danger"><strong>Không hoạt động</strong></span>
                                    }
                                </td>
                                <td>@(item.NhaCungCap?.Ten ?? "Không có")</td>
                                <td>@(item.DanhMucLoaiHang?.Ten ?? "Không có")</td>
                                <td>
                                    @if (item.AnhSanPhams != null && item.AnhSanPhams.Any())
                                    {
                                            <img src="@item.AnhSanPhams.First().ImageUrl" alt="@item.Ten"
                                        style="max-width: 80px; max-height: 80px; margin-right: 5px;" />
                                    }
                                    else
                                    {
                                    <span>Không có ảnh</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                        Sửa
                                    </a>
                                    <a asp-action="GetById" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                        Xem
                                    </a>
                                    <a asp-action="UpdateStatus" asp-route-id="@item.Id" class="btn @(item.TrangThai ? "btn-danger" : "btn-success") btn-sm" onclick="return confirm('Bạn có chắc chắn muốn thay đổi trạng thái sản phẩm này không?');">
                                        @(item.TrangThai ? "Vô hiệu hóa" : "Kích hoạt")
                                    </a>
                                </td>
                            </tr>
                            stt++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#sanPhamTable').DataTable();
        });
    </script>