@model IEnumerable<Infrastructure.Models.DanhMuc.SanPham>

@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container mt-4">
    <div class="row">
        @foreach (var sanPham in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card product-card shadow-sm">
                    <div class="product-image-container">
                        @if (sanPham.AnhSanPhams != null && sanPham.AnhSanPhams.Any())
                        {
                            var firstAnh = sanPham.AnhSanPhams.FirstOrDefault();
                            <a asp-controller="Home" asp-action="ChiTietSanPham_Home" asp-route-id="@sanPham.Id">
                                <img src="@firstAnh.ImageUrl" alt="@sanPham.Ten" class="card-img-top product-image" />
                            </a>
                        }
                    </div>
                    <div class="card-body product-details">
                        <h5 class="product-title text-truncate">
                            <a asp-controller="Home" asp-action="ChiTietSanPham_Home" asp-route-id="@sanPham.Id">
                                @sanPham.Ten
                            </a>
                        </h5>
                        <p class="product-price text-danger fw-bold">Giá: @sanPham.GiaBan.ToString("N0") VNĐ</p>
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Home" asp-action="ChiTietSanPham_Home" asp-route-id="@sanPham.Id" class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
                            <button class="btn btn-success btn-sm add-to-cart">Thêm vào giỏ</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- JavaScript -->
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>

<!-- CSS -->
<style>
    body {
        background-color: #f8f9fa;
    }

    .product-card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        border-radius: 10px;
        overflow: hidden;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
    }

    .product-image {
        width: 100%;
        height: 220px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-image:hover {
        transform: scale(1.1);
    }

    .product-title a {
        text-decoration: none;
        color: #333;
        font-weight: bold;
    }

    .product-title a:hover {
        color: #007bff;
    }

    .product-price {
        font-size: 16px;
    }

    .add-to-cart {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 5px 10px;
    }

    .add-to-cart:hover {
        background-color: #218838;
    }
</style>
